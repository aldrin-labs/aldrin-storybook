{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es2018",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": false
  },
  "paths": {
      "@components/*": ["src/components/*"]
    },
    "exclude": [
      "node_modules",
      "dist",
      "webpack",
      "stories",
      ".storybook"
  ]
}
