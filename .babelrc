{
  "env": {
    "test": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": {
              "browsers": ["last 2 versions"]
            }
          }
        ],

        "@babel/react",
        "@babel/preset-typescript"
      ],
      "plugins": [
        "react-hot-loader/babel",
        "styled-components",
        "@babel/plugin-transform-runtime"
      ]
    },
    "production": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "useBuiltIns": "usage",
            "targets": {
              "browsers": ["last 2 Chrome versions"]
            },
            "modules": false
          }
        ],

        "@babel/react",
        "@babel/preset-typescript"
      ],
      "plugins": ["lodash", "@babel/plugin-transform-runtime"]
    },
    "development": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": {
              "browsers": ["last 2 versions"]
            },
            "modules": false
          }
        ],

        "@babel/react",
        "@babel/preset-typescript"
      ],
      "plugins": [
        "react-hot-loader/babel",
        "styled-components",
        "@babel/plugin-proposal-class-properties",
        "@babel/plugin-transform-runtime"
      ]
    }
  }
}
